.block
  @extends $block

.delete
  @extends $delete

.heading
  display: block
  font-size: 11px
  letter-spacing: 1px
  margin-bottom: 5px
  text-transform: uppercase

.highlight
  @extends $block
  font-weight: $weight_normal
  max-width: 100%
  overflow: hidden
  padding: 0
  pre
    overflow: auto
    max-width: 100%

.loader
  @extends $loader

.number
  align-items: center
  background-color: $background
  border-radius: $radius_rounded
  display: inline-flex
  font-size: $size_medium
  height: 2em
  justify-content: @align-items
  margin-right: 1.5rem
  min-width: 2.5em
  padding: 0.25rem 0.5rem
  text-align: @justify-content
  vertical-align: top
