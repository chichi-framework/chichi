{
  "name": "chichi",
  "description": "The most popular front-end framework for Stylus",
  "version": "0.1.0-beta1",
  "version_short": "0.1.0-beta1",
  "keywords": [
    "css",
    "stylus",
    "mobile-first",
    "responsive",
    "front-end",
    "framework",
    "web"
  ],
  "homepage": "https://chichi.io",
  "author": {
    "name": "Jeremy Bolding",
    "email": "cyberchefjay@gmail.com",
    "homepage": "thecodechef.github.io"
  },
  "scripts": {
    "lint:lockfile": "lockfile-lint --allowed-hosts npm --allowed-schemes https: --empty-hostname false --type yarn --path yarn.lock",
    "lint:typescript": "",
    "lint:stylus": "stylelint \"**/*.styl\" --cache --cache-location .cache/.stylelintcache",
    "lint": "npm-run-all --parallel lint:*",
    "build:stylus": "parcel build stylus/chichi.styl --no-minify --out-dir ./dist/css",
    "build:stylus:minified": "parcel build stylus/chichi.styl --out-dir ./dist/css",
    "build:typescript": "parcel build ts/chichi.ts --no-minify --out-dir ./dist/js",
    "build:typescript:minified": "parcel build ts/chichi.ts --out-dir ./dist/js",
    "build:docs": "hugo --cleanDestinationDir",
    "build": "npm-run-all --parallel build:*",
    "release": "",
    "release:zip": "cross-env-shell \"rm -rf chichi-$npm_package_version-dist;cp -r dist/ chichi-$npm_package_version-dist;zip -r9 chichi-$npm_package_version-dist.zip chichi-$npm_package_version-dist;rm -rf chichi-$npm_package_version-dist\"",
    "serve:docs": "hugo server --port 4200 --disableFastRender",
    "serve:docs:only": "sirv _gh_pages --port 4200",
    "watch:stylus": "parcel watch stylus/**/*.styl",
    "watch:ts": "parcel watch ts/**/*.ts",
    "watch:docs:ts": "parcel watch docs/assets/ts/**/*.ts",
    "watch:docs:stylus": "parcel watch docs/assets/stylus/**/*.styl",
    "watch": "npm-run-all --parallel watch:*",
    "test:typescript": "",
    "test": "npm-run-all --parallel test:*"
  },
  "style": "dist/css/chichi.css",
  "stylus": "stylus/chichi.styl",
  "main": "dist/js/chichi.js",
  "engines": {
    "node": "*"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/chichi-framework/chichi.git"
  },
  "bugs": {
    "url": "https://github.com/chichi-framework/chichi/master/issues/new"
  },
  "license": "MIT",
  "files": [
    "./dist/{css,js}/*.{css,js,map}",
    "./ts/**/*ts",
    "./stylus/**/*.styl"
  ],
  "dependencies": {},
  "devDependencies": {
    "bundlewatch": "^0.3.1",
    "cross-env": "^7.0.2",
    "glob": "^7.1.6",
    "hammer-simulator": "^0.0.1",
    "hugo-bin": "^0.63.1",
    "ip": "^1.1.5",
    "linkinator": "^2.1.2",
    "lockfile-lint": "^4.3.7",
    "npm-run-all": "^4.1.5",
    "parcel-bundler": "^1.12.4",
    "parcel-plugin-at-alias": "^0.2.0",
    "sirv-cli": "^1.0.6",
    "stylelint": "^13.7.1",
    "stylelint-config-recommended": "^3.0.0",
    "stylelint-config-standard": "^20.0.0",
    "stylelint-plugin-stylus": "^0.9.0",
    "stylus": "^0.54.8",
    "tslint": "^6.1.3",
    "tslint-xo": "^0.16.0",
    "typescript": "^4.0.3"
  },
  "alias": {
    "@utils": "./util",
    "@dom": "./dom",
    "@base": "./base",
    "@components": "./components",
    "@elements": "./elements",
    "@form": "./form",
    "@grid": "./grid",
    "@helpers": "./helpers",
    "@layout": "./layout",
    "@utilities": "./utilities",
    "@variables": "./variables"
  },
  "peerDependencies": {}
}
